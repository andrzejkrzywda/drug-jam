= simple_form_for([:event, @attendance]) do |f|
  - if @attendance.errors.any?
    #error_explanation
      %h2
        = pluralize(@attendance.errors.count, "error")
        prohibited this event from being saved:

      %ul
      - @attendance.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :comment

  .actions
    = f.button :submit
