= simple_form_for([@event, @submission, @comment]) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this event from being saved:

      %ul
      - @comment.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :body

  .actions
    = f.button :submit
