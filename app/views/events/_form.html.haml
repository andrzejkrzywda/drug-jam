= simple_form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h3
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:

      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .inputs
    = f.input :starting_at, :include_blank => true
    = f.input :description
    = f.input :title
    = f.input :place

  .actions
    = f.button :submit
